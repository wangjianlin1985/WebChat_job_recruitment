<view class="container">
  <loading hidden="{{loadingHide}}">
    {{loadingText}}
  </loading>

  <view class="title">商家详情</view>
  <view class="seller_detail_view"> 
      <view class="viewItem" style="display:none;">
        <view class="label">商家账号：</view>
        <view class="content">
          <view>{{sellerUserName}}</view>
        </view>
      </view>

       <view class="viewItem" style="display:none;">
        <view class="label">预留密码段：</view>
        <view class="content"> 
          <view>{{password}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">商户名称：</view>
        <view class="content"> 
          <view>{{sellerName}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">商户照片：</view>
        <view class="content"> 
          <image mode="aspectFill" src="{{sellerPhotoUrl}}"></image>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">经营内容：</view>
        <view class="content"> 
          <view>{{workContent}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">经营时间：</view>
        <view class="content"> 
          <view>{{workTime}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">联系电话：</view>
        <view class="content"> 
          <view>{{telephone}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">工作地址：</view>
        <view class="content"> 
          <view>{{workAddress}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">营业许可证：</view>
        <view class="content"> 
          <image mode="aspectFill" src="{{workLicenseUrl}}"></image>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">评价分数：</view>
        <view class="content"> 
          <view>{{scoreValue}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">审核状态：</view>
        <view class="content"> 
          <view>{{shenHeState}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">注册时间：</view>
        <view class="content"> 
          <view>{{addTime}}</view>
        </view>
      </view>

      <view>
        <button class="vBtn_ok" formType="submit" catchtap="lookEvaluate">查看商家评价</button>
      </view>

      <view>
        <navigator class="btnReturn" open-type="navigateBack" hover-class="navigator-hover">返回</navigator>
      </view>

  </view>
</view>
